<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Enter Your Name"
        android:textSize="20dp"
        >


    </EditText>
    <EditText
        android:id="@+id/editview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Enter Your Roll No."
        android:textSize="20dp"
        android:layout_below="@+id/editview1"
        >


    </EditText>
    <EditText
        android:id="@+id/editview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Enter Your College Name"
        android:textSize="20dp"
        android:layout_below="@+id/editview2"
        >


    </EditText>
    <EditText
        android:id="@+id/editview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Enter Your Favorite Color"
        android:textSize="20dp"
        android:layout_below="@+id/editview3"
        >
    </EditText>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/editview4"
        android:text="Move to Activity 2"
        android:textSize="30dp"
        >

    </Button>



</RelativeLayout>